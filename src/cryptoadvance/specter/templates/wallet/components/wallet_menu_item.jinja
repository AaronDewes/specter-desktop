{# 
    wallet_menu_item - Wallet navigation bar menu item.
    Parameters:
    - tab: The tab name.
    - title: The tab title.
    - wallet_alias: The wallet alias (used in the URL navigation).
    - active_menuitem: Current active tab name.
    - isLeft: Is the item at the left edge (first item) of the navigation bar?
    - isRight: Is the item at the right edge (last item) of the navigation bar?
 #}
{% macro wallet_menu_item(tab, title, wallet_alias, active_menuitem, isLeft=false, isRight=false, id="", blueprint="wallets_endpoint") -%}
    <li class="mr-2">
        <a 
            class="text-lg inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-white {% if active_menuitem == tab %}text-blue-600 border-b-2 border-blue-600 active{% endif %}" 
            href="{{ url_for(blueprint+'.'+ tab, wallet_alias=wallet_alias)}}"
            {% if id!=""%} id="{{id}}"{% endif %}
        >
            {{ title }}
        </a>
    </li>
{%- endmacro %}
